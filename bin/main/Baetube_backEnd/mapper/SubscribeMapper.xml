<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="Baetube_backEnd.mapper.SubscribeMapper">
	
		<insert id="subscribe" statementType="CALLABLE">
		
			CALL insert_subscriber(channelId, subscriberId)
		
		</insert>
		
		<delete id="unSubscribe">
		
			CALL delete_subscriber(channelId, subscriberId)
		
		</delete>
		
		<select id="select" resultType="subscribersDto">
		
			SELECT * FROM subscribers WHERE channel_id = #{channelId} AND subscriber_id = #{subscriber_id}
		
		</select>
		
	</mapper>