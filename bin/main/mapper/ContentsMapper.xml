<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="mapper.ContentsMapper">
		
		<delete id="delete" statementType="CALLABLE">
		
			CALL delete_contents(
				#{contentsId},
				#{type}
			)
		
		</delete>
		
		<update id="updateLike">
		
			UPDATE contents SET 'like' = 'like' + #{value} WHERE contents_id = #{contentsId}
		
		</update>
		
		<update id="updateHate">
		
			UPDATE contents SET hate = hate + #{value} WHERE contents_id = #{contentsId}
		
		</update>
		
		<update id="updateReplyCount">
		
			UPDATE contents SET reply_count = reply_count + #{value} WHERE contents_id = #{contentsId}
		
		</update>
		
	</mapper>